@page
@model EntAppSecond.Pages.FormWSModel
@{
    ViewData["Title"] = "FormWS";
}

<h2>Form Worksheet</h2>

<form method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for=ProductCode class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for=ProductCode placeholder="productCode">
        </div>
    </div>

    <fieldset >
        <legend>What colour would you like?</legend>

        <div class="col-sm-offset-2 col-sm-10">
            @foreach (string Colour in Model.ColourChoices)
            {
                <div class="radio">
                    <label for=@Colour class="control-label">
                        <input type="radio" id=@Colour value=@Colour asp-for=ColourChosen
                               class="form-control">
                        @Colour
                    </label>
                </div>
            }
        </div>
    </fieldset>

    <div class="form-check">
       <input asp-for=HasConsented class="form-control" >
        <label class="control-label" asp-for="HasConsented"  >I consent to everything</label>
    </div>


    <div class="checkbox">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Sign in</button>
        </div>
    </div>
</form>